{
   "name": "size-charts",
   "version": "1.0.0",
   "description": "Open-source size chart management system for e-commerce platforms",
   "author": "Matt Decrevel",
   "license": "MIT",
   "homepage": "https://www.sizecharts.dev",
   "repository": {
      "type": "git",
      "url": "https://github.com/mattdecrevel/size-charts.git"
   },
   "bugs": {
      "url": "https://github.com/mattdecrevel/size-charts/issues"
   },
   "keywords": [
      "size-chart",
      "e-commerce",
      "sizing",
      "next.js",
      "prisma",
      "tailwind"
   ],
   "private": true,
   "scripts": {
      "dev": "next dev",
      "build": "prisma generate && next build",
      "build:analyze": "ANALYZE=true npm run build",
      "start": "next start",
      "lint": "eslint",
      "typecheck": "tsc --noEmit",
      "postinstall": "prisma generate",
      "db:migrate": "prisma migrate deploy",
      "db:push": "prisma db push",
      "db:seed": "npx tsx prisma/seed.ts",
      "db:reset": "npx prisma migrate reset --force",
      "db:studio": "npx prisma studio",
      "test": "vitest",
      "test:run": "vitest run",
      "test:coverage": "vitest run --coverage",
      "test:e2e": "playwright test",
      "test:e2e:ui": "playwright test --ui",
      "test:e2e:install": "playwright install"
   },
   "prisma": {
      "seed": "npx tsx prisma/seed.ts"
   },
   "dependencies": {
      "@prisma/adapter-pg": "^7.2.0",
      "@prisma/client": "^7.2.0",
      "@radix-ui/react-checkbox": "^1.3.3",
      "@radix-ui/react-dialog": "^1.1.15",
      "@radix-ui/react-dropdown-menu": "^2.1.16",
      "@radix-ui/react-label": "^2.1.8",
      "@radix-ui/react-select": "^2.2.6",
      "@radix-ui/react-separator": "^1.1.8",
      "@radix-ui/react-slot": "^1.2.4",
      "@radix-ui/react-switch": "^1.2.6",
      "@radix-ui/react-tooltip": "^1.2.8",
      "@sentry/nextjs": "^10.32.1",
      "@tanstack/react-query": "^5.90.12",
      "@types/swagger-ui-react": "^5.18.0",
      "@vercel/analytics": "^1.6.1",
      "@vercel/speed-insights": "^1.3.1",
      "@vercel/toolbar": "^0.1.41",
      "class-variance-authority": "^0.7.1",
      "clsx": "^2.1.1",
      "date-fns": "^4.1.0",
      "dotenv": "^17.2.3",
      "flags": "^4.0.2",
      "lucide-react": "^0.562.0",
      "next": "16.1.0",
      "next-themes": "^0.4.6",
      "pg": "^8.16.3",
      "prisma": "^7.2.0",
      "react": "19.2.3",
      "react-dom": "19.2.3",
      "swagger-ui-react": "^5.31.0",
      "tailwind-merge": "^3.4.0",
      "zod": "^4.2.1"
   },
   "devDependencies": {
      "@next/bundle-analyzer": "^16.1.0",
      "@playwright/test": "^1.57.0",
      "@tailwindcss/postcss": "^4",
      "@testing-library/jest-dom": "^6.9.1",
      "@testing-library/react": "^16.3.1",
      "@testing-library/user-event": "^14.6.1",
      "@types/node": "^20",
      "@types/pg": "^8.16.0",
      "@types/react": "^19",
      "@types/react-dom": "^19",
      "@vitejs/plugin-react": "^5.1.2",
      "eslint": "^9",
      "eslint-config-next": "16.1.0",
      "jsdom": "^27.3.0",
      "tailwindcss": "^4",
      "ts-node": "^10.9.2",
      "tsx": "^4.21.0",
      "tw-animate-css": "^1.4.0",
      "typescript": "^5",
      "vitest": "^4.0.16"
   }
}
